<% for (let err of errors) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= err %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<% for (let s of success) { %>
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <%= s %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<form class="form-signin" method="POST" action="/api/users/edit-profile?_method=PUT">

        <label for="inputName" class="sr-only">Name</label>
        <input type="text" id="inputName" class="form-control" placeholder="Name" name="name" value="<%= user.profile.name %>">
       
        <br />
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="Email address"  name="email" value="<%= user.email %>">
       
        <br />
        <label for="inputAddress" class="sr-only">Address</label>
        <input type="text" id="inputAddress" class="form-control" placeholder="Address" name="address" value="<%= user.address %>">
       
        <br />
        <label for="inputPassword" class="sr-only">Old Password</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="Old Password" name="oldPassword">
        
        <br />
        <label for="inputPassword" class="sr-only">New Password</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="New Password" name="password">
        
        <br />
        <label for="inputPassword" class="sr-only">Comfirm New Password</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="Confirm New Password" name="password_2">
       
        <br />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Update Profile</button>
       
       </form>