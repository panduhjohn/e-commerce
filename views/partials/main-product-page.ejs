<div class="jumbotron">
    <div class="container">
      <h1 class="display-3 text-center">Best Online Shopping</h1>
    </div>
</div>

<div class="row" id="productSearchResults">
    <% for(let product of products) { %>
      <div class="col">      
          <div class="card">
              <a href="/api/products/<%= product.id %>"> 
                <img class="card-img-top" src="<%= product.image %>" alt="Card image cap" />
              </a> 
              <div class="card-body">
                <h5 class="card-title">Name: <%= product.name %></h5>
                <p class="card-text">Category: <%= product.category.name %></p>
                <p class="card-text">$<%= product.price %></p>
                <a href="/api/products/<%= product.id %>" class="btn btn-primary">Shop</a>
              </div>
          </div>
      </div>
      <% } %>
</div>

              <% if (pages > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                    <% } else { %>
                        <li><a href="/products/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                        <% } else { %>
                            <li><a href="/products/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled"><a>Last</a></li>
                    <% } else { %>
                        <li><a href="/products/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
    </div>


